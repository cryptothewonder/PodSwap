<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5  totalProfile">
      <div class="col-6">
        <div class="profilecontainer mt-5">
          <img class= 'rounded-circle img-fluid' src="<%= user.profilePic%>" alt="pofile pic">
        </div>
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-danger">Logout</a>
          </div>
          
          <div class="mt-5">
            <h2>Post Your Pod!</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="dropdown mb-3">
                <!-- <label for="category" class="form-label">Category</label> -->
                <select for = 'category' id= 'category' name='category' class = 'form-select' aria-label="Default select example">
                  <option selected>Category</option>
                  <option value="comedy">Comedy</option>
                  <option value="true-crime">True Crime</option>
                  <option value="science">Science</option>
                  <option value='other'>Other</option>
                </select>
              </div>
              <div>
              <label for="price">Price:</label>
<input type="number" id="price" name="price" step="0.01" min="0" max="2000" placeholder="$0.00">
              </div>
              <button type="submit" class="btn btn-danger" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6 border d-flex align-items-end justify-content-center">
        <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <!-- <img class="img-fluid" src="<%= posts[i].image%>"> -->
              <h1>
                <%= posts[i].title%>
              </h1>
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row pb-3 mt-5">
          <a class="btn btn-danger" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>

<%- include('partials/footer') -%>