                </div>
                <img class= 'img-fluid w-50 d-none d-sm-block' src="/imgs/two-pods.svg">
            </div>
        </div>   
    
        <div class="row justify-content-around mt-5">
            <a href="/login" class="col-3 btn btn-light"> Login</a>
            <a href="/signup" class="col-3 btn btn-light"> Signup</a>
        </div>
    </section>

    <!-- Title -->
    <section class="bg-light text-danger p-5">
        <div class ='container'>
            <h1 class="text-center"><a href="/profile"><img src="/imgs/podswap-logo.png" alt="PodSwap" id="logo"></a></h1>
        </div>
    
    
    <!-- Newsletter -->
    
        <div class="container">
            <div class ='d-md-flex justify-content-between align-items-center'>
                <h3 class="mb-3 mb-md-0">Sign Up For Our Newsletter</h3>
                
                    <form class="input-group news-input" action = "/newsletter" method="POST">
